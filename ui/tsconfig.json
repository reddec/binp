{
  "extends": "@tsconfig/svelte/tsconfig.json",

  "include": ["src/**/*", "src/node_modules"],
  "exclude": ["node_modules/*", "__sapper__/*", "public/*"],
  "compilerOptions": {
    "baseUrl": ".",
    "typeRoots": [
      "./node_modules/@types",
      "./types"
    ],
    "paths": {
      "tslib" : ["node_modules/tslib/tslib.d.ts"]
    },
    "lib": [
      "dom", "es2015"
    ],
    "target": "ES6"
  }
}